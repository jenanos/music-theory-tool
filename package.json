{
  "name": "music-theory-tool",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:db:up": "docker compose -f compose.dev.yml --env-file .env.dev up -d",
    "dev:db:down": "docker compose -f compose.dev.yml --env-file .env.dev down",
    "dev:db:logs": "docker compose -f compose.dev.yml --env-file .env.dev logs -f postgres",
    "db:generate": "pnpm --filter @repo/db run db:generate",
    "db:migrate:dev": "pnpm --filter @repo/db run db:migrate:dev",
    "db:migrate:deploy": "pnpm --filter @repo/db run db:migrate:deploy",
    "db:seed": "pnpm --filter @repo/db run db:seed",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.7.5"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
