{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "prisma/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
